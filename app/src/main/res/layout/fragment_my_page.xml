<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".activities.main.fragment.mypage.MyPageFragment">

        <LinearLayout
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="마이페이지"
                        android:textSize="24dp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:layout_marginLeft="170dp"
                        android:src="@drawable/ic_account_circle"
                        android:layout_width="46dp"
                        android:layout_height="46dp"/>
            </LinearLayout>


            <TextView
                    android:text="내 티켓"
                    android:textSize="17sp"
                    android:textColor="#010101"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_ticket"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

            <TextView
                    android:layout_marginTop="55.7dp"
                    android:text="결제 내역"
                    android:textSize="17sp"
                    android:textColor="#010101"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_pay"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
            <TextView
                    android:text="전체보기"
                    android:id="@+id/btn_more"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="6.8dp"
                    android:layout_marginLeft="304.8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
</RelativeLayout>