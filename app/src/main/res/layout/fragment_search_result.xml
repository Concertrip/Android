<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".activity.main.fragment.search.SearchResultFragment">

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:nestedScrollingEnabled="false">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                        >
                <TextView
                        android:text="아티스트"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:lineSpacingExtra="9sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/ly_artist_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>
                <TextView
                        android:id="@+id/btn_more_artist"
                        android:text="전체보기"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="6.8dp"
                        android:layout_marginLeft="304.8dp"
                        android:lineSpacingExtra="6sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="9dp"
                        android:background="#9e9e9f"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                            >
                <TextView
                        android:text="콘서트"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:lineSpacingExtra="9sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/ly_concert_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>
                <TextView
                        android:id="@+id/btn_more_list"
                        android:text="전체보기"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="6.8dp"
                        android:layout_marginLeft="304.8dp"
                        android:lineSpacingExtra="6sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>